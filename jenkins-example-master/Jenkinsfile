pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'javac src/main/java/com/techprimers/*.java -d target'
            }
        }
        
        stage('Test') {
            steps {
                sh 'java -cp "target:test" org.junit.runner.JUnitCore com.techprimers.FizzBuzzTest'
            }
        }
    }
}
