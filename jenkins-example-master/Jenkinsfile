pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.9.7'
        VENV = "${WORKSPACE}/venv"
    }

    stages {
        stage('Checkout') {
            steps {
                sh 'rm -rf jenkinsPipeline'
                sh 'curl -L https://github.com/Marvin1808/jenkinsPipeline/archive/refs/heads/main.zip -o jenkinsPipeline.zip'
                sh 'unzip jenkinsPipeline.zip'
            }
        }

        stage('Create Virtual Environment') {
            steps {
                sh "python${PYTHON_VERSION} -m venv ${VENV}"
                sh "${VENV}/bin/pip install --upgrade pip"
                sh "${VENV}/bin/pip install -r jenkinsPipeline/requirements.txt"
            }
        }

        stage('Unit Test') {
            steps {
                sh "${VENV}/bin/pytest jenkinsPipeline/tests/unit"
            }
        }

        stage('Integration Test') {
            steps {
                sh "${VENV}/bin/pytest jenkinsPipeline/tests/integration"
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Deploying the application..."'
            }
        }
    }
}
