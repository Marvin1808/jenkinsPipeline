pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/username/repository.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'javac src/*.java'
            }
        }

        stage('Test') {
            steps {
                sh 'java -cp src org.junit.runner.JUnitCore com.techprimers.testing.FizzBuzzTest'
            }
        }

        stage('Build JAR') {
            steps {
                sh 'mkdir -p build'
                sh 'jar cvf build/myapp.jar src/*.class'
            }
        }

        stage('Deploy') {
            steps {
                sh 'scp build/myapp.jar user@server:/path/to/destination'
            }
        }
    }
}
