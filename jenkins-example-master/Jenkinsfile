pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          userRemoteConfigs: [[url: 'https://github.com/Marvin1808/jenkinsPipeline.git']]])
            }
        }
        
        stage('Build') {
            environment {
                MAVEN_HOME = tool 'Maven'
                PATH = "$MAVEN_HOME/bin:${env.PATH}"
            }
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            environment {
                MAVEN_HOME = tool 'Maven'
                PATH = "$MAVEN_HOME/bin:${env.PATH}"
            }
            steps {
                sh 'mvn test'
            }
        }
    }
}
