pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          userRemoteConfigs: [[url: 'https://github.com/Marvin1808/jenkinsPipeline.git']]])
            }
        }
        
        stage('Build') {
            steps {
                sh 'javac src/main/java/com/techprimers/testing/FizzBuzz.java -d target'
            }
        }
        
        stage('Test') {
            steps {
                sh 'java -cp target com.techprimers.testing.FizzBuzz'
            }
        }
    }
}
