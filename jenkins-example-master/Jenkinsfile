pipeline {
    agent any
    tools {
        maven 'Maven 3.9.1'
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout SCM code
                checkout scm
            }
        }
        stage('Build') {
            steps {
                // Run Maven build
                withMaven(maven: 'Maven 3.9.1') {
                    sh 'mvn clean package'
                }
            }
        }
        stage('Test') {
            steps {
                // Run tests
                withMaven(maven: 'Maven 3.9.1') {
                    sh 'mvn test'
                }
            }
        }
        stage('Deploy') {
            steps {
                // Deploy artifacts
                withMaven(maven: 'Maven 3.9.1') {
                    sh 'mvn deploy'
                }
            }
        }
    }
}
