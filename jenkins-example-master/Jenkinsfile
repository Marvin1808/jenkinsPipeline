pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                sh 'rm -rf jenkinsPipeline'
                sh 'curl -L https://github.com/Marvin1808/jenkinsPipeline/archive/refs/heads/main.zip -o jenkinsPipeline.zip'
                sh 'unzip jenkinsPipeline.zip'
                sh 'mv jenkinsPipeline-main/* .'
            }
        }

        stage('Build') {
            steps {
                sh 'echo "Building the application..."'
            }
        }

        stage('Test') {
            steps {
                sh 'echo "Running tests..."'
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Deploying the application..."'
            }
        }
    }
}
