pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/Marvin1808/jenkinsPipeline.git']]])
            }
        }
        stage('Build') {
            steps {
                sh 'javac jenkins-example-master/src/test/java/com/techprimers/testing/FizzBuzzTest.java -d target'
            }
        }
        stage('Test') {
            steps {
                sh 'java -cp target com.techprimers.testing.FizzBuzzTest'
            }
        }
    }
}
